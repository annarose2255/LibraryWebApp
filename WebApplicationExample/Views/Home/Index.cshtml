@model WebApplicationExample.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<html>
<head>
    <title>Home Page</title>
    <link rel="stylesheet" type="text/css" href="../content/site.css" />
</head>
<body>
    <div>
        <div class="new-additions">
            <h2>New Additions</h2>
        </div>
    </div>

    <!-- TODO: add model varables to change info based on database-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img id="image-height" src="~/Content/book-images/@Model.CarouselMedia.Media1.Img" alt="Los Angeles">
                <div class="carousel-caption">
                    <h3>@Model.CarouselMedia.Media1.Title</h3>
                    <h2>Author</h2>
                    <p class="summary-text">@Model.CarouselMedia.Media1.Description</p>
                </div>
            </div>

            <div class="item">
                <img id="image-height" src="~/Content/book-images/@Model.CarouselMedia.Media2.Img" alt="Chicago">
                <div class="carousel-caption">
                    <h3>@Model.CarouselMedia.Media2.Title</h3>
                    <h2>Author</h2>
                    <p class="summary-text">@Model.CarouselMedia.Media2.Description</p>
                </div>
            </div>

            <div class="item">
                <img id="image-height" src="~/Content/book-images/@Model.CarouselMedia.Media3.Img" alt="New York">
                <div class="carousel-caption">
                    <h3>@Model.CarouselMedia.Media3.Title</h3>
                    <h2>Author</h2>
                    <p class="summary-text">@Model.CarouselMedia.Media3.Description</p>
                </div>
            </div>
        </div>


        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    </br>

    <div>
        <div class="location-hours">
            <h2>Location and Hours</h2>
        </div>
    </div>

    </br>
    <!-- Information Blocks -->
    <div class="row">
        <!--Hours-->
        <div class="block1">
            <h3>Hours</h3>
            <table>
                @foreach (var day in Model.DayHours)
                {
                    <tr><th>@day.DayName</th><td>@day.HourOfOperation</td></tr>
                }
            </table>
        </div>
        <!--Location-->
        <div class="block2">
            <h3>Location</h3>
            <p class="block-links">
                Address:
                <a class="block-links" href="https://www.google.com/maps/place/Westview+Cemetery+Inc./33.7330846,-84.4306764,13.62z/data=!4m5!3m4!1s0x88f51cbbe22cb30f:0x7b869bcdcf20033c!8m2!3d33.7463642!4d-84.4422021">
                    1680 Westview Dr SW, Atlanta, GA 30310
                </a>
            </p>
        </div>
        <!--Map Image-->
        <div class="block3">
        </div>
    </div>


@*faq section*@
<div class="row">
    </br>
    <div>
        <div class="faq-box">
            <h2>FAQ</h2>
        </div>
    </div>
    </br>
    @*<div id="home-faq" class="well well-sm">*@
    <div class="col-md-6">
        <div class="well well-sm" style="background-color: #A5CECD; " ;>
            @*lighter blue color*@
            <div class="footerLinks"> @Html.ActionLink("FAQ Page", "FAQ", "Home", null, new { id = "link" })</div>
            <p> Get help by seeing the frequently asked questions! </p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="well well-sm" style="background-color: #A5CECD; ">
            <div class="footerLinks"> @Html.ActionLink("Contact Us Page", "Contact", "Home", null, new { id = "link" })</div>
            <p> Contact us if you have any more questions! </p>
        </div>
    </div>
</div>

</body>
</html>
